{% extends "layout.html.twig" %}

{% block title %}Home{% endblock %}

{% block content %}
{% for article in articles %}
<article>
    <h2><a class="articleTitle" href="{{ path('article', { 'id': article.id }) }}">{{ article.title }}</a></h2>
    <p>{{ article.content | truncate(400) | raw }}</p>
</article>
{% endfor %}

<div class="pagination">
<span class="text-left">Page </span>
{% for i in 1..pagesTotales %}
	{% if i == pageCourante %}
		<span> {{ i }} </span>
	{% else %}
		<a href="?page={{i}}"> {{i}} </a>
	{% endif %}
{% endfor %}

</div>

{% endblock %}

