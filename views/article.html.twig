{% extends "layout.html.twig" %}

{% block title %}{{ article.title }}{% endblock %}

{% block content %}
<p>
    <h2>{{ article.title }}</h2>
    <p>{{ article.content | raw  }}</p>

    <h3>Commentaires</h3>
    {% for comment in comments %}
        <div class="commentaire_art"><div class="auteur_com_art">{{ comment.author }},</div>{{ comment.content|nl2br }}</div><br />
    {% else %}
        Pas encore de commentaires.
    {% endfor %}

    <h3>Ajouter un commentaire</h3>
    {% if commentForm %}
        {{ form_start(commentForm) }}
        <div class="formText" class="form-group">
       <label>Pseudo : </label> {{ form_widget(commentForm.author, { 'attr':  {
                    'autocomplete' : 'off',
                    'class': 'form-control-name',
                    'placeholder': 'Entrer votre pseudo',
                    'value' : ''
                    
                }}) }}
        </div>
            <div class="form-group">
    
                {{ form_widget(commentForm.content, { 'attr':  {
                    'id' : 'form_textarea',
                    'autocomplete' : 'off',
                    'rows': '4',
                    'class': 'mceNoEditor',
                    'placeholder': 'Entrer votre commentaire'
                }}) }}
            </div>
            <div class="form-group">
                <input type="submit" id="bouton" class="btn btn-primary" value="Publier commentaire" />
                
            </div>
        {{ form_end(commentForm) }}
        {% for flashMessage in app.session.flashbag.get('success') %}
            
            <div class="alert alert-success">
                {{ flashMessage }}
            </div>
        {% endfor %}

    {% endif %}
 
        

{% endblock %}


 