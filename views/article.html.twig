{% extends "layout.html.twig" %}

{% block title %}{{ article.title }}{% endblock %}

{% block content %}
<p>
    <h2>{{ article.title }}</h2>
    <p>{{ article.content }}</p>

    <h3>Comments</h3>
    {% for comment in comments %}
        <strong>{{ comment.author }}</strong> dit : {{ comment.content }}<br>
    {% else %}
        No comments yet.
    {% endfor %}

    <h3>Add a comment</h3>
    {% if commentForm %}
        {{ form_start(commentForm) }}
        <div class="formText" class="form-group">
       <label>Pseudo : </label> {{ form_widget(commentForm.author, { 'attr':  {
                    'autocomplete' : 'off',
                    'class': 'form-control-name',
                    'placeholder': 'Entrer votre pseudo',
                    'value' : ''
                    
                }}) }}
        </div>
            <div class="form-group">
    
                {{ form_widget(commentForm.content, { 'attr':  {
                    'id' : 'form_textarea',
                    'autocomplete' : 'off',
                    'rows': '4',
                    'class': 'form-control',
                    'placeholder': 'Entrer votre commentaire'
                }}) }}
            </div>
            <div class="form-group">
                <input type="submit" id="bouton" class="btn btn-primary" value="Publier commentaire" />
                
            </div>
        {{ form_end(commentForm) }}
        {% for flashMessage in app.session.flashbag.get('success') %}
            
            <div class="alert alert-success">
                {{ flashMessage }}
            </div>
        {% endfor %}

    {% endif %}
 
        

{% endblock %}


 